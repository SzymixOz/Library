<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.40"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.edu.agh.controller.AddUserController"
            prefWidth="1000" prefHeight="600">
    <top>
        <Label id="titleLabel" text="Strona główna" styleClass="label"/>
    </top>
    <center>
        <VBox id="centerVBox">
            <Button text="Zaloguj się" styleClass="button"/>
            <Button text="Katalog" styleClass="button"/>
            <Button text="Dodaj użytkownika" styleClass="button"/>
            <Button text="Dodaj książkę" styleClass="button"/>
            <Button text="Widok administratora" styleClass="button"/>
            <Button text="Wyloguj się" styleClass="button"/>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@../styles/MainStyles.css" />
    </stylesheets>
</BorderPane>
